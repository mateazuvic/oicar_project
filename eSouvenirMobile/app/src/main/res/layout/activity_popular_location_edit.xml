<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".PopularLocationEdit">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">


    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        tools:text="Hungarian Parliament"
        android:textSize="45sp"
        android:textAlignment="center"
        android:padding="15dp"
        android:fontFamily="@font/header_font_family"
        android:background="@color/redColor"
        android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:text="Have you visited this place?"
                android:textColor="#8e9aa3"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivVisited"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="3"
                android:paddingRight="50dp"
                android:src="@drawable/success" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:text="Your impressions:"
                android:textColor="#8e9aa3"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etDesc"
                android:layout_width="290dp"
                android:layout_height="160dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:inputType="textMultiLine"
                android:maxLines="10"
                android:gravity="top"
                android:background="#d3e3d7"
                android:src="@drawable/success"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/picture" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="29sp"
            android:textColor="@color/white"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="25dp"
            android:letterSpacing="0"
            android:fontFamily="@font/beach_charm"
            android:backgroundTint="#dbbd35"
            android:text="Save" />

    </LinearLayout>

</ScrollView>